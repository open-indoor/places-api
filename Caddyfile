:80 {

    log {
        level DEBUG
        format json
    }

    handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }

        respond @404 "File not found."
    }

    handle /places/* {
        reverse_proxy unix//var/run/fcgiwrap.socket {
            transport fastcgi {
                split "/places/"
                env SCRIPT_FILENAME /places/places
                env API places-api
                env API_DOMAIN_NAME ${API_DOMAIN_NAME}
            }
        }
    }

}